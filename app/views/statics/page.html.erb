<div class="container" id="banner">
  <div class="d-flex justify-content-center align-items-center flex-column" style="height:100%;width:100%">
    <div class="row">
      <h2 style="text-shadow:#797a7e 0px 0px 10px">Shop your instruments</h2>
    </div>
    <div class="row">
     <% unless current_user %>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Get Started!
      </button>
     <%end%>
      <%= render 'shared/modal' %>
      <%= render 'shared/session' %>
      <%= render 'shared/password_forgotten' %>
      </div>
    </div>
  </div>

   <%=render 'shared/quote'%>
   <div style="width:50vw;margin-left:400px;margin-top:30px">
    <%= form_with( url: root_path, method: :get,romote: true) do |f| %>
     <div class="search-form-control form-group">
      <%=f.text_field :search ,class:"form-control string required",id:"search_query" %>
      <%=button_tag(:class=>"btn btn-flat",:style=>"background:#ffc93c") do%>
        Search <i class="fas fa-search"></i>
      <%end%>
    </div>
    <%end%>
  </div>
<div>
<div style="display:flex;width:100vw;margin-left:50px;margin-top:100px">
  <%=render 'shared/bar', collection:@categories %>
  <div style="margin-left:5px;margin-right:5px;" id="product_list">
    <%=render'products/product', collection:@products%>
  </div>
</div>
    <%= will_paginate(@products,:renderer => WillPaginate::ActionView::LinkRenderer) %>
