<div class="row">
<%@products.each do |product| %>
  <div class="card col-sm-4" style="width: 18rem;">
    <% if product.image.attached? %>
      <%= link_to (image_tag product.display_image, class:"card-img-top",style:"height:300px"), product_path(product.id) %>
      <%=badge_color(product)%>
    <%end%>
    <div class="card-body">
      <div style="display:flex;justify-content:space-around;">
        <p class="card-text"><%=product.brand%></p>
        <p class="card-text"><%=to_currency(product)%></p>
      </div>
      <div style="display:flex;justify-content:space-around;">
        <%=can_edit_product(product)%>
        <p class="card-text">sold by <%=product.user.name%></p>
      </div>
    </div>
  </div>
<%end%>
</div>
